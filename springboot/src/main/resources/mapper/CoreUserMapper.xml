<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CoreUserMapper">
    <select id="selectCoreUserByPage" resultType="com.example.demo.entity.CoreUser">
        SELECT * FROM core_user,platform WHERE core_user.workId = platform.id AND workId = #{workId} order by effectIndex DESC
    </select>
</mapper>